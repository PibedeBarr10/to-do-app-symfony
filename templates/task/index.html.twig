{% extends 'base.html.twig' %}

{% block title %}Twoje zadania{% endblock %}

{% block body %}
    {% if tasks %}
    <h1>Twoje zadania:</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Czas do końca zadania</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
        
                <tr>
                    <td>{{ task.title }}</td>
                    <td>{{ task.deadline|date("d/m/Y") }}</td>
                    <td>
                        <a href="/task/edit/{{ task.id }}" class="btn btn-dark">Edytuj</a>
                        <a href="{{ path('task.delete', {task: task.id }) }}" class="btn btn-danger delete-task">Usuń</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>Brak zadań</p>
    {% endif %}
{% endblock %}